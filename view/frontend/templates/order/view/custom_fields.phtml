<?php
/** @var Magepow\CheckoutCustom\Block\Order\CustomFields $block */

/** @var Magepow\CheckoutCustom\Model\Data\CustomFields $customFields */
$customFields = $block->getCustomFields($block->getOrder());
?>
<?php if($customFields): ?>
    <div class="block block-order-details-view">
        <div class="block-content">
            <div class="box">
                <div class="box-content">
                    <?php if (empty($customFields->getCheckoutOrderReference())): ?>
